{
  "compilerOptions": {
    "target": "ESNext",                                 
    "module": "commonjs",                               
    "rootDir": "./src",                                  
    "outDir": "./build",                                  
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                
    "skipLibCheck": true                               
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "fastify-cors.d.ts",
  ],
  "exclude": ["node_modules"]
}